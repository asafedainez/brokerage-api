{
  "name": "brokerage-api",
  "version": "1.0.0",
  "description": "desafio técnico para vaga de dev júnior backend na XP Inc.",
  "author": "Asafe Dainez",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/server.ts' -e ts",
    "db:migrate": "yarn prisma migrate dev",
    "generate": "yarn prisma generate",
    "db:seed": "ts-node src/database/seed.ts",
    "db:push": "yarn prisma db push",
    "db:drop": "yarn prisma migrate reset",
    "pretest": "DB_URL='postgres://postgres:password@db_test:5432/brokerage' yarn db:push && DB_URL='postgres://postgres:password@db_test:5432/brokerage' yarn db:seed",
    "posttest": "DB_URL='postgres://postgres:password@db_test:5432/brokerage' yarn db:drop --force",
    "test": "DB_URL='postgres://postgres:password@db_test:5432/brokerage' jest"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.3",
    "jest-mock-extended": "^2.0.7",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.0.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
